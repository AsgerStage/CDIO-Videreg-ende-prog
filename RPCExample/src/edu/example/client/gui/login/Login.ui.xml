<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> 
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
    xmlns:g='urn:import:com.google.gwt.user.client.ui'> 
    
<g:VerticalPanel width="200px" height="auto">
            <g:Label text="Username:" width="100%" height="auto" />
            <g:TextBox ui:field="normalText" width="100%" height="auto" visible='true' />
            <g:Label text="Password:" width="100%" height="auto"/>
            <g:PasswordTextBox ui:field="normalPassword" width="100%" height="auto" />
            <g:Cell horizontalAlignment="ALIGN_RIGHT">
                <g:Button text="Login" ui:field="Authenticate" height="25px"/>
            </g:Cell>
        </g:VerticalPanel>
  
</ui:UiBinder> 